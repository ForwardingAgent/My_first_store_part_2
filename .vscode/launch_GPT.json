{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Python: Django Remote Debug",
          "type": "python",
          "request": "launch",
          "host": "127.0.0.1",
          "program": "${workspaceFolder}/store/manage.py",
          "pathMappings": [
              {
                  "localRoot": "${workspaceFolder}/store/manage.py",
                  "remoteRoot": "/store"
              }
          ],
          "django": true,
          "justMyCode": true
      }
  ]
}
